generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @default(cuid())
  whopUserId       String     @unique
  role             String     @default("buyer")
  companyId        String? // Optional - kept for backward compatibility
  company          Company?   @relation(fields: [companyId], references: [id])
  whopProductId    String? // Whop product ID for this user's digital products
  whopAccessToken  String? // OAuth access token for this user
  whopRefreshToken String? // OAuth refresh token for this user
  tokenExpiresAt   DateTime? // When the access token expires
  createdAt        DateTime   @default(now())
  purchases        Purchase[]
  products         Product[] // Products created by this user
}

model Company {
  id               String    @id @default(cuid())
  whopCompanyId    String    @unique
  name             String
  whopAccessToken  String?
  whopRefreshToken String?
  tokenExpiresAt   DateTime?
  whopProductId    String?
  isActive         Boolean   @default(true)
  installedAt      DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  products         Product[]
  users            User[]
}

model Product {
  id          String     @id @default(cuid())
  userId      String // User who created this product
  user        User       @relation(fields: [userId], references: [id])
  companyId   String? // Optional - kept for backward compatibility during migration
  company     Company?   @relation(fields: [companyId], references: [id])
  title       String
  description String?
  priceCents  Int
  currency    String     @default("USD")
  fileKey     String
  imageKey    String? // Legacy image field
  imageUrl    String?    @db.VarChar(1024)
  whopPlanId  String?    @db.VarChar(191)
  planId      String?
  whopCheckoutConfigurationId String? @db.VarChar(191)
  whopPurchaseUrl            String? @db.VarChar(1024)
  version     Int        @default(1)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  purchases   Purchase[]
}

model Purchase {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  buyerId       String
  buyer         User     @relation(fields: [buyerId], references: [id])
  whopPaymentId String   @unique
  status        String   @default("paid")
  amountCents   Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  downloads     Int      @default(0)
}
